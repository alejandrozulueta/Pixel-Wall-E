<Window x:Class="Visual.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visual"
        mc:Ignorable="d"
        Title="MainWindow" Height="{Binding Height}" Width="{Binding Width}">
    <Window.Resources>
        <local:Settings x:Key="Settings" Height="450" Width="800"/>
    </Window.Resources>

    <Window.DataContext>
        <Binding Source="{StaticResource Settings}"/>
    </Window.DataContext>

    <DockPanel>
        <Grid Margin="5,5,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="51*"/>
                <ColumnDefinition Width="228*"/>
                <ColumnDefinition Width="116*"/>
                <ColumnDefinition Width="395*"/>
            </Grid.ColumnDefinitions>

            <Canvas x:Name="DrawCanvas"
                Margin="5,5,5,5" 
                Grid.Column="0" Grid.ColumnSpan="3"/>

            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ScrollViewer Margin="5,5,5,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="CodeEditor" 
                            Grid.Column="1" KeyDown="CodeEditor_KeyDown"/>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
