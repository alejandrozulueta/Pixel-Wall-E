<Window x:Class="Visual.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visual"
        mc:Ignorable="d"
        Title="MainWindow" Height="{Binding Height}" Width="{Binding Width}">
    <Window.Resources>
        <local:Settings x:Key="Settings" Height="450" Width="800"/>
    </Window.Resources>

    <Window.DataContext>
        <Binding Source="{StaticResource Settings}"/>
    </Window.DataContext>

    <DockPanel>

        <Border DockPanel.Dock="Top" Background="Transparent" Visibility="Visible">
            <Menu x:Name="Menu">
                <MenuItem Header="_Archivo">
                    <MenuItem Header="_Guardar" Click="SaveClick"/>
                    <Separator/>
                    <MenuItem Header="_Cargar" Click="LoadClick"/>
                </MenuItem>
                <MenuItem Header="_Redimensionar" Click="ResizeClick"/>
            </Menu>

        </Border>

        <Grid Name="Main" KeyDown="MainKeyControl">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>

            <Canvas x:Name="DrawCanvas"
                Grid.Column="0"
                Loaded="ResizeEvent"/>

            <Grid Grid.Column="2" x:Name="RightPanelGrid" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" x:Name="EditorArea"/>
                    <RowDefinition Height="Auto" x:Name="ErrorsArea"/>
                </Grid.RowDefinitions>

                <ScrollViewer >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="Lines" 
                             IsReadOnly="True"
                             Grid.Column="0"/>
                        <TextBox x:Name="CodeEditor" 
                            Grid.Column="1" KeyDown="CodeEditor_KeyDown" Text="" TextChanged="TextChanged"
                            AcceptsReturn="True"/>

                    </Grid>
                </ScrollViewer>

                <TextBox x:Name="Errors" 
             Grid.Row="1"
             IsReadOnly="True" VerticalScrollBarVisibility="Auto"
             Visibility="Collapsed"/>

                <Popup x:Name="SuggestionPopup"
               Placement="Custom"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Fade">

                    <Border BorderBrush="Gray" BorderThickness="1" Background="WhiteSmoke" CornerRadius="3" Padding="2">
                        <ListBox x:Name="SuggestionListBox"
                         MaxHeight="200"
                         MinWidth="150">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Padding="3"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Popup>

            </Grid>
        </Grid>
    </DockPanel>
</Window>
