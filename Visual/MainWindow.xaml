<Window x:Class="Visual.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visual"
        mc:Ignorable="d"
        Title="MainWindow" Height="{Binding Height}" Width="{Binding Width}">
    <Window.Resources>
        <local:Settings x:Key="Settings" Height="450" Width="800"/>
    </Window.Resources>

    <Window.DataContext>
        <Binding Source="{StaticResource Settings}"/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="16*"/>
        </Grid.ColumnDefinitions>

        <Canvas x:Name="DrawCanvas"
                Grid.Column="0" Grid.ColumnSpan="2"/>

        <Grid Grid.Column="2" x:Name="RightPanelGrid" >
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" x:Name="EditorArea"/>
                <RowDefinition Height="Auto" x:Name="ErrorsArea"/>
            </Grid.RowDefinitions>

            <ScrollViewer >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="Lines" 
                             IsReadOnly="True"
                             Grid.Column="0"/>
                    <TextBox x:Name="CodeEditor" 
                            Grid.Column="1" KeyDown="CodeEditor_KeyDown" Text="" TextChanged="TextChanged"/>
                </Grid>
            </ScrollViewer>

            <TextBox x:Name="Errors" 
             Grid.Row="1"
             IsReadOnly="False" VerticalScrollBarVisibility="Auto"
             Visibility="Collapsed"/>

        </Grid>
    </Grid>
</Window>
